# MongoDB Connection String (Replace with your own)
MONGO_URI="mongodb://localhost:27017/resignationDB"

# JWT Secret Key (Use a long, random string)
JWT_SECRET="YOUR_VERY_SECURE_JWT_SECRET"

# Backend Port
PORT=3001

# Nodemailer (Use a service like Gmail with an App Password or another SMTP service)
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="YOUR_EMAIL@gmail.com" # Sender Email
MAIL_PASS="YOUR_APP_PASSWORD" # Sender App Password

# Calendarific API Key (Required for holiday check)
CALENDARIFIC_API_KEY="YOUR_CALENDARIFIC_API_KEY"